{% extends 'LCMAdminBundle::layout.html.twig' %}

{% set title = 'Startup' %}
{% set subtitle = 'list' %}

{% block actions %}

<a href="{{ path('startup_new') }}">Create a new entry</a>

{% endblock %}

{% block content %}


<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Season</th>
            <th>Pitch</th>
            <th>Website</th>
            <th>Status</th>
            <th>Socialnetworks</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('startup_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.season }}</td>
            <td>{{ entity.pitch }}</td>
            <td>{{ entity.website }}</td>
            <td>{{ entity.status }}</td>
            <td>{{ entity.socialnetworks }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('startup_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('startup_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>


{% endblock %}
