{% extends 'LCMAdminBundle::layout.html.twig' %}

{% set title = 'Wall' %}
{% set subtitle = 'list' %}

{% block actions %}

<a href="{{ path('wall_new') }}">Create a new entry</a>

{% endblock %}

{% block content %}


<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Said</th>
            <th>Day</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('wall_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.said }}</td>
            <td>{% if entity.day %}{{ entity.day|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('wall_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('wall_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>


{% endblock %}
