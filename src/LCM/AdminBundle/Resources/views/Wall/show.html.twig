{% extends 'LCMAdminBundle::layout.html.twig' %}

{% set title = 'Wall' %}
{% set subtitle = 'details' %}

{% block actions %}

<form action="{{ path('wall_delete', { 'id': entity.id }) }}" method="post">{{ form_widget(delete_form) }}<button type="submit">Delete</button></form><a href="{{ path('wall') }}">Back to the list</a>
&nbsp;&nbsp;&nbsp;&nbsp;<a href="{{ path('wall_edit', { 'id': entity.id }) }}">Edit</a>

{% endblock %}

{% block content %}

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Said</th>
            <td>{{ entity.said }}</td>
        </tr>
        <tr>
            <th>Day</th>
            <td>{{ entity.day|date('Y-m-d H:i:s') }}</td>
        </tr>
    </tbody>
</table>


{% endblock %}
