{% extends 'LCMMafiaBundle::layout.html.twig' %}

{% block content %}
        <div id="wall">
        {% if app.user.bro %}

        <form action="{{ path('_mafia_wall_new') }}" method="post" {{ form_enctype(newwall) }}>
            {#{ form_widget(newwall) }#}
            <input id="lcm_mafiabundle_wall_said" name="lcm_mafiabundle_wall[said]" required="required" />
            {{ form_widget(newwall._token) }}
            <button type="submit">Send</button>
        </form>

        {% for m in msg %}
            <p><span><a href="http://facebook.com/{{ m.user.facebookid }}" target="_blank"><img class="profile" src="http://graph.facebook.com/{{ m.user.facebookid }}/picture" alt="" /></a> {{ m.user.firstname }} : </span> {{ m.said }}</p>
        {% endfor %}
        {% endif %}
        </div>
{% endblock %}
